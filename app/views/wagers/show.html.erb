<% content_for :title, "Wager ##{@wager.id}"%>
<dl>
			<dt>User</dt>
	    <dd><%= @wager.user.login %></dd>
			<dt>Option</dt>
	    <dd><%= @wager.bet_option.label %></dd>
			<dt>Amount</dt>
	    <dd><%= @wager.amount %></dd>

			<% if !@wager.bet.active? %>
			<dt>Refund</dt>
	    <dd><%= @wager.refund %></dd>
			<dt>Win/Loss Amount</dt>
	    <dd><%= @wager.win_amount %></dd>
			<% end %>
	
</dl>

<%= link_to 'Back', bet_wagers_path(@bet.id) %>
