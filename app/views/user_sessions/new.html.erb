<h1>Login</h1>

<%= form_for @user_session, :url => user_session_path do |f| %>
  <dl>
		<dt><%= f.label :login %></dt>
  	<dd><%= f.text_field :login %></dd>
	  <dt><%= f.label :password %></dt>
	  <dd><%= f.password_field :password %></dd>
  	<dt><%= f.check_box :remember_me %><%= f.label :remember_me %></dt>
		<dd></dd>
  	<dt><%= f.submit "Login" %> | <%= link_to "Sign Up", new_account_path %></dt>
		<dd></dd>
	</dl>
<% end %>

