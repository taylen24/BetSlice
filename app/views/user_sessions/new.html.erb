<% content_for :title, 'Login' %>

<%= form_for @user_session, :url => user_session_path do |f| %>
  <dl>
		<dt><%= f.label :login %></dt>
  	<dd><%= f.text_field :login %></dd>
	  <dt><%= f.label :password %></dt>
	  <dd><%= f.password_field :password %></dd>
  	<dt>&nbsp;</dt>
		<dd><%= f.check_box :remember_me %><%= f.label :remember_me %></dd>
  	<dt>&nbsp;</dt>
		<dd><%= f.submit "Login" %> | <%= link_to "Sign Up", new_account_path %></dd>
	</dl>

	<div class="omniauth-connect">
	  <h3>Or Sign in with</h3>
	  <% ["twitter","facebook", "google"].each do |provider| %>
	    <%= link_to image_tag("auth/#{provider}_64.png"), "/auth/#{provider}" %>
	  <% end %>
	</div>
<% end %>

