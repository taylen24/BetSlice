<!DOCTYPE html>
<html>
	<head>
	  <title>BetSlice</title>
	  <%= stylesheet_link_tag    "application" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<div id="page">
			<%= render "layouts/application/header" %>
			<div id="container">
				<h1><%= yield :title %></h1>
				<div id="content">
					<% if notice %><p id="notice"><%= notice %></p><% end %>
					<%= yield %>
				</div>
			</div>
		</div>
	</body>
</html>
